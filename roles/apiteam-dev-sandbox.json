{
    "name": "AppTeam Dev sandbox",
    "policy": {
        "description": "AppTeam Dev Sandbox role for read and write operations to tables.",
        "resources": [
            "drn:astra:org:__ASTRA_ORG_API_TOKEN__:db:__ASTRA_DB_SANDBOX_ID__:keyspace:*"
        ],
        "actions": [
            "db-table-create",
            "db-table-alter",
            "db-table-drop",
            "db-table-select",
            "db-table-modify",
            "db-table-describe",
            
            "db-keyspace-create",
            "db-keyspace-alter",
            "db-keyspace-describe",
            "db-keyspace-drop",
            "db-keyspace-modify",
            
            "db-cql",
            "db-rest"
        ],
        "effect": "allow"
    }
}
