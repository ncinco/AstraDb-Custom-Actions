{
    "name": "AppTeam Dev __DOMAIN__",
    "policy": {
        "description": "AppTeam Dev role for read and write operations to tables.",
        "resources": [
            "drn:astra:org:__ASTRA_ORG_ID__:db:__ASTRA_DB_ID__:keyspace:*"
        ],
        "actions": [
            "db-table-create",
            "db-table-alter",
            "db-table-drop",
            "db-table-select",
            "db-table-modify",
            "db-table-describe",
            
            "db-keyspace-create",
            "db-keyspace-alter",
            "db-keyspace-describe",
            "db-keyspace-drop",
            "db-keyspace-modify",
            
            "db-cql",
            "db-rest",
            
            "org-db-view"
        ],
        "effect": "allow"
    }
}
